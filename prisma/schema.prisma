// Prisma schema for NoviSlides

datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Slideshow {
  id                 String   @id @default(cuid())
  name               String
  defaultAutoSlideMs Int      @default(5000)
  revealTransition   String   @default("slide")
  loop               Boolean  @default(true)
  controls           Boolean  @default(true)
  autoSlideStoppable Boolean  @default(false)
  defaultScreenKey   String   @default("main")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  screens            Screen[]
  mountedDisplay     Display?
}

model Screen {
  id          String   @id @default(cuid())
  slideshowId String
  key         String
  width       Int
  height      Int
  revision    Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  slideshow Slideshow @relation(fields: [slideshowId], references: [id], onDelete: Cascade)
  slides    Slide[]

  @@unique([slideshowId, key])
}

model Slide {
  id                   String   @id @default(cuid())
  screenId             String
  orderIndex           Int
  title                String?
  autoSlideMsOverride  Int?
  backgroundColor      String?
  backgroundImagePath  String?
  backgroundImageSize  String?
  backgroundImagePosition String?
  transitionOverride   String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  screen   Screen       @relation(fields: [screenId], references: [id], onDelete: Cascade)
  elements SlideElement[]

  @@index([screenId])
}

model SlideElement {
  id        String   @id @default(cuid())
  slideId   String
  type      String
  x         Float
  y         Float
  width     Float
  height    Float
  rotation  Float   @default(0)
  opacity   Float   @default(1)
  zIndex    Int     @default(0)
  animation String  @default("none")
  dataJson  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slide Slide @relation(fields: [slideId], references: [id], onDelete: Cascade)

  @@index([slideId])
}

model MediaAsset {
  id           String   @id @default(cuid())
  kind         String   @default("image")
  path         String
  originalName String
  mimeType     String
  sizeBytes    Int      @default(0)
  width        Int?
  height       Int?
  durationMs   Int?
  createdAt    DateTime @default(now())

  @@index([createdAt])
  @@index([kind])
}

model Display {
  id                String    @id @default(cuid())
  name              String    @unique
  width             Int
  height            Int
  mountedSlideshowId String?   @unique
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  mountedSlideshow Slideshow? @relation(fields: [mountedSlideshowId], references: [id], onDelete: SetNull)
}

model EditorAuth {
  id           String   @id @default("default")
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model EditorSession {
  id         String   @id @default(cuid())
  tokenHash  String   @unique
  rememberMe Boolean  @default(false)
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@index([expiresAt])
}
